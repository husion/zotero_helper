{
  "manifest_version": 3,
  "name": "Zotero WebDAV Helper",
  "version": "1.0.0",
  "description": "Unlock WebDAV attachments in Zotero Web Library",
  "permissions": [
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.zotero.org/*",
    "*://dav.jianguoyun.com/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.zotero.org/*"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  }
}
